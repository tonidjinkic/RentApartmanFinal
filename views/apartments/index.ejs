<%- include("../partials/header") %>

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Dobrodošli u RentApartman!</h1>
             <p>Vaše najbolje online-apartman izdavanje</p>
             <% if(currentUser && currentUser.isAdmin){ %>
             <p>
                <a class="btn btn-primary btn-large" href="apartments/new">Dodaj novi apartman</a>
             </p>
             <% }%>
             <p>
                 <form action="apartments" method="GET" class="form-inline">
                     <div class="form-group">
                         <input type="text" name="search" placeholder="Pretrazivanje apartmana.." class="form-control">
                         <input type="submit" name="earch" class="btn btn-default">
                     </div>
                 </form>
             </p>
         </div>
     </header>

     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <div class="col-md-12">
            <% if(noMatch !== undefined) { %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% apartments.forEach(function(apartment){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= apartment.image %>">
                   <div class="caption">
                       <h4><%= apartment.name %></h4>
                   </div>
                   <p>
                       <a href="apartments/<%= apartment._id %>" class="btn btn-primary">Više informacija</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include("../partials/footer") %>
